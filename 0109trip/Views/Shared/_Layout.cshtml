<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 旅遊規劃平台</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="/css/accounting.css" asp-append-version="true">

</head>
<body>
    <nav class="navbar">
        <div class="nav-left">
            <a href="/">
                <img src="/image_3.png" alt="Logo" class="logo-img" onerror="this.src='https://placehold.co/45?text=LOGO'">
            </a>
        </div>
        <div class="nav-center" id="navMenu">
            <a href="#">平台說明</a>
            <a href="#">行程總覽</a>
            @* <a href="#">記帳分帳</a> *@
            <a asp-controller="Accounting" asp-action="Index">記帳分帳</a>
            <a href="#">景點探索</a>
        </div>
        <div class="nav-right">
            <div id="navAuth" style="display: flex; align-items: center; gap: 20px;">
                <a href="#" class="btn-text">註冊</a>
                <button class="btn-login-nav" onclick="toggleLogin()">登入</button>
            </div>
            <i class="fa-solid fa-bars menu-toggle" onclick="toggleMobileMenu(event)"></i>
        </div>
    </nav>

    @RenderBody()

    <button class="debug-btn" onclick="toggleLogin()">測試登入切換</button>

    <script src="/js/accounting.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>